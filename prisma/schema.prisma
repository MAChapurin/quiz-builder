generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  salt         String   @default("")
  quizzes      Quiz[]   @relation("AuthorQuizzes")
  createdAt    DateTime @default(now())
}

model Quiz {
  id            String        @id @default(cuid())
  title         String
  description   String
  author        User          @relation("AuthorQuizzes", fields: [authorId], references: [id])
  authorId      String
  questions     Question[]
  inviteTokens  InviteToken[]
  attempts      QuizAttempt[]

  isPublished   Boolean       @default(false)
  createdAt     DateTime      @default(now())
}

model Question {
  id         String        @id @default(cuid())
  quiz       Quiz          @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId     String
  type       QuestionType
  text       String
  options    Option[]
  createdAt  DateTime      @default(now())
}

model Option {
  id         String    @id @default(cuid())
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String
  text       String
  isCorrect  Boolean  @default(false)
  order      Int      @default(0)
}

enum QuestionType {
  SINGLE
  MULTIPLE
}

model InviteToken {
  id          String        @id @default(cuid())

  quizId      String
  quiz        Quiz          @relation(fields: [quizId], references: [id], onDelete: Cascade)
  attempts    QuizAttempt[]

  token       String        @unique
  label       String?
  expiresAt   DateTime
  used        Boolean       @default(false)

  createdAt   DateTime      @default(now())
}

model QuizAttempt {
  id             String           @id @default(cuid())

  quizId         String
  quiz           Quiz             @relation(fields: [quizId], references: [id], onDelete: Cascade)

  inviteTokenId  String?
  inviteToken    InviteToken?     @relation(fields: [inviteTokenId], references: [id], onDelete: SetNull)

  mode           QuizAttemptMode

  score          Int
  total          Int
  answers        Json

  createdAt      DateTime         @default(now())

  @@index([quizId])
  @@index([inviteTokenId])
}

enum QuizAttemptMode {
  TEST
  PUBLIC
}
